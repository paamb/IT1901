    <TextField fx:id="hoursField" promptText="enter hours" layoutX="118.0" layoutY="258.0" prefHeight="27.0" prefWidth="38.0" />
    <TextField fx:id="minutesField" promptText="enter minutes" layoutX="176.0" layoutY="258.0" prefHeight="27.0" prefWidth="38.0" />
    <CheckBox fx:id="watchedCheckBox" layoutX="23.0" layoutY="294.0" mnemonicParsing="false" text="Sett" />
    <Button fx:id="addTheMovie" layoutX="269.0" layoutY="359.0" mnemonicParsing="false" onAction="#submit" text="Lagre" />
